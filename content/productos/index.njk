---js
const title = "Productos | iPhoneShop"
const description = "Descubre nuestra selección de iPhones y accesorios Apple en Bogotá. Renueva tu equipo y únete al parche de las segundas oportunidades. ¡Estrena hoy!"
---

{% css %}
	.ProductImage {
		width: 15vw;
		aspect-ratio: 1/1;
	}

	.Product:hover {
		transform: scale(1.2);
	}
{% endcss %}

{%- for categoria in categorias %}
	<h1 style="text-align: center;">{{categoria}}</h1>
	<div style="display: flex; flex-direction: row; justify-content: center; gap: 60px; flex-wrap: wrap; padding-left: 50px; padding-right: 50px;">
	{%- for producto in productosCategorias %}
		{% if producto.categoria == categoria %}
		<a
		href="/productos/{{loop.index-1}}"
		class="Product"
		style="display: flex; flex-direction: column; justify-content: center; align-items: center; color: inherit; text-decoration: none; max-width: 25vw;">
			{% if producto.imagenes %}
				<div
					class="w-box ProductImage"
					style="
								background-image: url('/img/newproductos/{{ producto.imagenes[0].path }}');
								background-position: center;
								background-size: contain;
								background-repeat: no-repeat;
							"
				></div>
			{% else %}
				<div
					class="w-box ProductImage"
					style="
								background-image: url('/img/newproductos/{{ producto.imagen }}');
								background-position: center;
								background-size: contain;
								background-repeat: no-repeat;
							"
				></div>
			{% endif %}
			<span style="text-align: center; font-weight: 500;">
			{% if producto.nombre == '' %}
				{{ producto.categoria }}
			{% else %}
				{{ producto.categoria }} {{ producto.nombre }}
			{% endif %}
			</span>
		</a>
		{% endif %}
	{% endfor -%}
	</div>
	<hr style="opacity: 0.25; margin-top: 60px;">
{% endfor -%}


<div style="display: flex; flex-direction: column; justify-content: center; align-items: center; gap: 30px; margin-top: 30px;">
	<img src="/img/servicios/sticker escríbenos.png" style="width: 10vw">
	<a
		class="WhatsAppButton desktop"
		href="https://api.whatsapp.com/send/?phone=573503324894&text&type=phone_number&app_absent=0">
		<img src="/img/icono_apple.png">
		<span>
			Chatea con nosotros
		</span>
	</a>
	<img src="/img/servicios/renuevate_1.png">
</div>
